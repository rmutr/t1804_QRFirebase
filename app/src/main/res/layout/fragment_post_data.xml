<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Datetime-->
    <TextView
        android:id="@+id/txtShowDatetime"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/my_margit"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/h1"
        android:text="dd-MM-yyyy HH:mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--TextField-->
    <EditText
        android:id="@+id/edtWeight"
        android:inputType="numberDecimal"
        android:hint="Weight : "
        android:layout_marginRight="@dimen/my_margit"
        android:layout_marginLeft="@dimen/my_margit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--Update Button-->
    <Button
        android:id="@+id/btnSaveOnFirebase"
        android:text="Save on Firebase"
        android:layout_marginRight="@dimen/my_margit"
        android:layout_marginLeft="@dimen/my_margit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
